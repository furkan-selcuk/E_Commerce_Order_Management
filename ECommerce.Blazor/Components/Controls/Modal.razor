<div class="custom-modal-backdrop"></div>
<div class="custom-modal" tabindex="-1">
    <div class="custom-modal-dialog @GetSizeClass()">
        <div class="custom-modal-content">
            <div class="custom-modal-header">
                <div class="header-top-row">
                    <p class="custom-modal-title">@Title</p>
                    <button type="button" class="custom-close-btn" @onclick="OnClose">&times;</button>
                </div>
                @if (HeaderToolbar != null)
                {
                    <div class="header-toolbar-row">
                        @HeaderToolbar
                    </div>
                }
            </div>
            <div class="custom-modal-body">
                @ChildContent
            </div>
        </div>
    </div>
</div>

<style>
    .custom-modal-backdrop {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-color: rgba(0, 0, 0, 0.5);
        z-index: 1040;
    }

    .custom-modal {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        max-height: 95vh;
        margin-top: 1rem;
        display: flex;
        align-items: center;
        justify-content: center;
        z-index: 1050;
        overflow-x: hidden;
        overflow-y: auto;
        padding: 1rem;
    }

    .custom-modal-dialog {
        position: relative;
        width: 100%;
        margin: 1.75rem auto;
        pointer-events: none;
        background-color: #f0f0f0;
    }

    .size-sm {
        max-width: 300px;
    }

    .size-md {
        max-width: 500px;
    }

    .size-lg {
        max-width: 800px;
    }

    .size-xl {
        max-width: 1140px;
    }

    .size-fullscreen {
        max-width: 100%;
        margin: 0;
        height: 100%;
    }

    .custom-modal-content {
        position: relative;
        display: flex;
        flex-direction: column;
        width: 100%;
        pointer-events: auto;
        background-color: #f0f0f0;
        background-clip: padding-box;
        border: 1px solid rgba(0, 0, 0, 0.2);
        border-radius: 0.3rem;
        outline: 0;
    }

    .custom-modal-header {
        display: flex;
        flex-direction: column;
        padding: 0;
        border-bottom: 1px solid #dee2e6;
        border-top-left-radius: 0.3rem;
        border-top-right-radius: 0.3rem;
    }

    .header-top-row {
        display: flex;
        align-items: center;
        background-color: #d2d2d2;
        justify-content: space-between;
        padding: 0.75rem 1rem;
        min-height: 1.5rem;
    }

    .header-toolbar-row {
        display: flex;
        align-items: center;
        padding: 0.5rem 1rem;
        border-top: 1px solid #e9ecef;
        background-color: #f0f0f0;
    }

    .custom-modal-title {
        margin: 0;
        font-size: 1rem;
        font-weight: 600;
        line-height: 1.5;
    }

    .custom-close-btn {
        padding: 0;
        background-color: transparent;
        border: 0;
        font-size: 1.5rem;
        font-weight: 700;
        line-height: 1;
        color: #000;
        opacity: 0.5;
        cursor: pointer;
    }

    .custom-close-btn:hover {
        opacity: 0.75;
    }

    .custom-modal-body {
        position: relative;
        flex: 1 1 auto;
        padding: 1rem;
        overflow-y: auto;
        max-height: calc(100vh - 200px);
    }

    /* Media Queries */
    @@media (max-width: 1024px) {
        .size-sm {
            max-width: 280px;
        }

        .size-md {
            max-width: 450px;
        }

        .size-lg {
            max-width: 700px;
        }

        .size-xl {
            max-width: 90%;
        }
    }

    @@media (max-width: 768px) {
        .custom-modal {
            padding: 0.5rem;
        }

        .custom-modal-dialog {
            margin: 0.5rem auto;
        }

        .size-sm {
            max-width: 250px;
        }

        .size-md {
            max-width: 400px;
        }

        .size-lg {
            max-width: 95%;
        }

        .size-xl {
            max-width: 95%;
        }
    }

    @@media (max-width: 576px) {
        .custom-modal {
            
        }

        .custom-modal-dialog {
            margin: 0.25rem auto;
        }

        .size-sm,
        .size-md,
        .size-lg,
        .size-xl {
            max-width: 100%;
            width: 100%;
        }

        .custom-modal-header {
            
        }

        .custom-modal-body {
            padding: 0.75rem;
            max-height: calc(100vh - 150px);
        }

        .custom-modal-title {
            font-size: 0.875rem;
        }
    }
</style>

@code {
    [Parameter] public string Title { get; set; } = "İşlem";
    [Parameter] public string Size { get; set; } = "modal-xl";
    [Parameter] public RenderFragment ChildContent { get; set; }
    [Parameter] public RenderFragment? HeaderToolbar { get; set; }
    [Parameter] public EventCallback OnClose { get; set; }

    private string GetSizeClass()
    {
        return Size switch
        {
            "modal-sm" => "size-sm",
            "modal-md" => "size-md",
            "modal-lg" => "size-lg",
            "modal-xl" => "size-xl",

            "modal-2xl" => "size-2xl",
            "modal-fullscreen" => "size-fullscreen",
            _ => "size-xl"
        };
    }
}