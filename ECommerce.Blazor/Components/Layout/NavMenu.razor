@using ECommerce.Blazor.Services
@inject ViewService ViewService
@implements IDisposable

<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">E-Commerce</a>
    </div>
</div>

<input type="checkbox" class="navbar-toggler" aria-label="Toggle navigation" />

<div class="nav-scrollable" onclick="document.querySelector('.navbar-toggler').click()">
    <nav class="flex-column">
        <div class="nav-item px-3">
            <button class="nav-link @GetActive("Home")" @onclick="@(() => SetView("Home"))">
                <span class="bi bi-house-door-fill-nav-menu" aria-hidden="true"></span> Ana Sayfa
            </button>
        </div>
        <div class="nav-item px-3">
            <button class="nav-link @GetActive("Cari")" @onclick="@(() => SetView("Cari"))">
                <span class="bi bi-people-fill-nav-menu" aria-hidden="true"></span> Cariler
            </button>
        </div>
        <div class="nav-item px-3">
            <button class="nav-link @GetActive("Stok")" @onclick="@(() => SetView("Stok"))">
                <span class="bi bi-boxes-nav-menu" aria-hidden="true"></span> Stoklar
            </button>
        </div>
        <div class="nav-item px-3">
            <button class="nav-link @GetActive("Fatura")" @onclick="@(() => SetView("Fatura"))">
                <span class="bi bi-receipt-nav-menu" aria-hidden="true"></span> Faturalar
            </button>
        </div>
    </nav>
</div>

<style>
    
    .nav-link {
        background: none;
        border: none;
        width: 100%;
        text-align: left;
        cursor: pointer;
        display: flex;
        align-items: center;
        padding: 0.5rem 1rem;
        color: #d7d7d7;
        text-decoration: none;
    }
    .nav-link:hover {
        color: white;
        background-color: rgba(255,255,255,0.1);
    }
    .nav-link.active {
        color: white;
        background-color: rgba(255,255,255,0.1);
        font-weight: bold;
    }

