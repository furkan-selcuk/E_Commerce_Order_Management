@code {
    protected override void OnInitialized()
    {
        ViewService.OnChange += StateHasChanged;
    }

    public void Dispose()
    {
        ViewService.OnChange -= StateHasChanged;
    }

    private void SetView(string viewName)
    {
        ViewService.SetView(viewName);
    }

    private string GetActive(string viewName)
    {
        return ViewService.ActiveView == viewName ? "active" : "";
    }
}
